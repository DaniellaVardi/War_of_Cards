<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/shop_background"
    android:padding="16dp"
    tools:context=".ResultActivity">


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/menu_IMG_doraBoots"
        android:layout_width="wrap_content"
        android:layout_height="215dp"
        android:layout_marginBottom="250dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_logo_background" />

    <TextView
        android:id="@+id/result_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="36sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:fontFamily="@font/new_rocket"
        android:layout_centerInParent="true"
        android:text="Result " />

    <Button
        android:id="@+id/result_btn_play_again"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play Again"
        android:fontFamily="@font/new_rocket"
        android:textAllCaps="true"
        android:textSize="24dp"
        android:layout_below="@id/result_text_view"
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:backgroundTint="@color/gold"/>

    <Button
        android:id="@+id/result_btn_main_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Main Menu"
        android:fontFamily="@font/new_rocket"
        android:textAllCaps="true"
        android:textSize="24dp"
        android:layout_below="@id/result_btn_play_again"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:backgroundTint="@color/gold"/>

</RelativeLayout>
